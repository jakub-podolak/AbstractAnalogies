#!/bin/bash
#SBATCH --job-name=analogy-eval
#SBATCH --output=analogy_eval_%j.out
#SBATCH --error=analogy_eval_%j.err
#SBATCH --time=01:00:00
#SBATCH --partition=broadwl
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --mem=4GB

# Navigate to the script directory
cd ~/AbstractAnalogies/eval

# Assuming the parent directory AbstractAnalogies needs to be in PYTHONPATH
export PYTHONPATH=$PYTHONPATH:~/AbstractAnalogies

# Load Python environment
module load python/3.8

# Change to the correct Git branch
git checkout sy/verbal-analogy

# Run the Python script
python verbal_analogy_evaluator.py
